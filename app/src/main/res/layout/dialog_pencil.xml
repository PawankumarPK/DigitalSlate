<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#00000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/thinPencil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:drawableLeft="@drawable/thin"
            android:drawableStart="@drawable/thin"
            android:padding="5dp"
            android:text="      Thin"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/smallPencil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/small"
            android:drawableStart="@drawable/small"
            android:padding="5dp"
            android:text="     Small"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/mediumPencil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:drawableLeft="@drawable/medium"
            android:drawableStart="@drawable/medium"
            android:padding="5dp"
            android:text="   Medium"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/largePencil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:drawableLeft="@drawable/large"
            android:drawableStart="@drawable/large"
            android:padding="5dp"
            android:text="  Large"
            android:textSize="28sp" />

    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.v7.widget.CardView>
