<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#00000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/smallEraser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:drawableLeft="@drawable/small"
            android:drawableStart="@drawable/small"
            android:padding="5dp"
            android:text="      Small"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mediumEraser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:drawableLeft="@drawable/medium"
            android:drawableStart="@drawable/medium"
            android:padding="5dp"
            android:text="   Medium"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/largeEraser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:drawableLeft="@drawable/large"
            android:drawableStart="@drawable/large"
            android:padding="5dp"
            android:text="  Large"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/clearAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:drawableLeft="@drawable/ic_clear"
            android:drawableStart="@drawable/ic_clear"
            android:padding="5dp"
            android:text="  Clear All"
            android:textSize="28sp" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</android.support.v7.widget.CardView>